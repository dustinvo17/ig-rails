<!DOCTYPE html>
<html>
  <head>
    <title>InstagramRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar fixed-top navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/"><img src="https://www.freelogodesign.org/file/app/client/thumb/a537dda3-6f46-40d0-94a4-4125b4b1df14_200x200.png?1565758435775" style="width:50px;height:50px;"></a>
        <form class="form-inline my-2 my-lg-0 mx-auto">
          <input class="form-control mr-sm-2 " type="search" placeholder="Search" aria-label="Search">
        </form>
        <ul class="navbar-nav navbar-expand-lg mx-auto">
          <li class="nav-item">
            <a class="nav-link" href="/"><%= fa_icon "home" %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/discovers"><%= fa_icon "safari" %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><%= fa_icon "heart" %></a>
          </li>
          <li class="nav-item">
            <% if user_signed_in? %>
              <%= link_to user_profile_path(current_user.id), class:"nav-link" do %>
                <% if current_user.avatar.attached?%>
                  <img src="<%= url_for(current_user.avatar) %>"style="width:20px;height:20px;border-radius:50%"  >
                <% else %>
                  <img src="https://image.shutterstock.com/image-vector/empty-photo-male-profile-gray-260nw-538707310.jpg" alt="..." style="width:20px;height:20px;border-radius:50%">
                <% end %>
              <%end %>
            <%else %>
              <%= link_to new_user_session_path, class:"nav-link" do %>
                <%= fa_icon "user" %>
              <%end %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_post_path , class:"nav-link" do%>
              <%= fa_icon "plus" %>
            <% end %>
          </li>
          <li class="nav-item">
            <% if user_signed_in? %>
              <%= link_to destroy_user_session_path, method: :delete, class:"nav-link" do %>
                <%= fa_icon "sign-out" %>
              <%end %>
            <%end %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>


</html>
