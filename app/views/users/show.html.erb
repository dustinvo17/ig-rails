<div class="container content-part">
  <div class="row">
    <div class="col-sm-4 profile-show">
      <% if @user.avatar.attached?%>
        <img src="<%= url_for(@user.avatar) %>">
      <% else %>
        <img src="https://image.shutterstock.com/image-vector/empty-photo-male-profile-gray-260nw-538707310.jpg" alt="..." >
      <% end %>
    </div>

    <div class="col-sm-6">
        <div class="row">
            <h4> <%= @user.username %></h4>
            <% if @user.id == current_user.id %>
            <%= link_to  'Edit profile', edit_user_registration_path, class:"btn btn-outline-secondary mx-4 btn-sm" %>
            <% end %>
        </div>
        <div class="row mt-4">
            <div><span class="font-weight-bold"><%= @user.posts.count %></span> posts</div>
            <div class="ml-5"><span class="font-weight-bold"><%= @user.followers.count%></span> followers</div>
            <div class="ml-5"><span class="font-weight-bold"><%= @user.following.count%></span> following</div>
        </div>
        <div class="row mt-4">
                <h5> <%= @user.name %></h5>
           <%= render 'follow_form' if user_signed_in? %>
        </div>
    
    </div>

  </div>
  <hr>
  <div class="row images-post-profile mt-5">
  
    <% @user.posts.each do |post| %>

        <% if post.image.attached?%>
        <div class="col-4 my-3"> <img  class="img-fluid"src="<%= url_for(post.image) %>"></div>
        <%else %>
        <%= post.id %> ko co image
        <% end %>
    <% end %>
  </div>
</div>
